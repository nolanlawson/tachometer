{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "lib": ["esnext", "esnext.asynciterable"],

    "declaration": true,
    "sourceMap": true,
    "pretty": true
  }
}
